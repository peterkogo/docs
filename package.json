{
  "name": "the-guild-docs-monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "storybook build",
    "build:css": "NODE_ENV=production tailwindcss --config tailwind.config.ts --postcss --output packages/components/style.css",
    "dev": "turbo run dev --parallel",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --cache --ignore-path .gitignore .",
    "lint:prettier": "prettier --cache --check .",
    "prebuild-storybook": "pnpm build --filter=@theguild/remark-\\*",
    "prepare": "husky install",
    "prerelease": "pnpm build",
    "prettier": "pnpm lint:prettier --write",
    "release": "changeset publish",
    "storybook": "storybook dev --port 4000",
    "test": "vitest",
    "types:check": "turbo run types:check"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@rollup/plugin-alias": "5.1.1",
    "@storybook/addon-essentials": "8.2.9",
    "@storybook/addon-links": "8.2.9",
    "@storybook/core-common": "8.2.9",
    "@storybook/nextjs": "8.2.9",
    "@storybook/react": "8.2.9",
    "@storybook/theming": "8.2.9",
    "@svgr/webpack": "8.1.0",
    "@theguild/eslint-config": "0.12.1",
    "@theguild/prettier-config": "2.0.7",
    "@theguild/tailwind-config": "0.5.0",
    "@types/jest-image-snapshot": "6.4.0",
    "@types/react": "18.3.11",
    "@types/react-paginate": "7.1.4",
    "@types/webpack": "5.28.5",
    "css-loader": "7.1.2",
    "eslint": "9.12.0",
    "eslint-plugin-storybook": "0.10.1",
    "eslint-plugin-tailwindcss": "3.17.5",
    "husky": "9.1.6",
    "jest-image-snapshot": "6.4.0",
    "lint-staged": "15.2.10",
    "next-themes": "0.3.0",
    "postcss": "8.4.47",
    "postcss-loader": "8.1.1",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "pretty-quick": "4.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "8.2.9",
    "storybook-dark-mode": "4.0.2",
    "style-loader": "4.0.0",
    "tailwindcss": "3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tsconfig-paths-webpack-plugin": "4.1.0",
    "tsup": "8.3.0",
    "tsx": "4.19.1",
    "turbo": "2.2.0",
    "typescript": "5.6.3",
    "vitest": "2.1.3"
  },
  "browserslist": [
    "> 1%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,md,json,yml,yaml}": [
      "pretty-quick --staged",
      "ESLINT_USE_FLAT_CONFIG=false eslint"
    ]
  },
  "pnpm": {
    "overrides": {
      "@theguild/remark-npm2yarn": "workspace:*",
      "@theguild/remark-mermaid": "workspace:*",
      "esbuild": "0.24.0",
      "eslint-plugin-react-hooks": "5.0.0"
    },
    "patchedDependencies": {
      "tsup@8.3.0": "patches/tsup@8.2.1.patch"
    }
  }
}
